{
  "name": "nitpix",
  "version": "1.0.0",
  "description": "Chrome extension + local server for pixel-perfect UI review with Claude Code",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "nitpix": "dist/cli.js"
  },
  "files": [
    "dist/",
    "extension/",
    "skill/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "serve": "tsx cli.ts serve",
    "dev": "tsx watch cli.ts serve",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "dependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "vitest": "^3.0.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0"
  }
}
